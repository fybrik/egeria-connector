<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
    <property name="LOGS" value="./logs" />
 
    <appender name="Console"
        class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                <!-- %d{ISO8601} %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): [WKC-Connector] %msg%n%throwable -->
                {"timestamp":"%d{yyyy-MM-dd HH:mm:ss.SSS}","component":"wkc-connector","level":"%level","thread-id":"%thread","logger":"%logger","message":"%message"}%n%throwable
            </Pattern>
        </layout>
    </appender>
    
    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="Console" />
    </root>
 
    <!-- LOG "com.ibm.wkc*" at TRACE level -->
    <logger name="com.ibm.wkc" level="info" additivity="false">
        <appender-ref ref="Console" />
    </logger>
 
</configuration>
